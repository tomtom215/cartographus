{
  "name": "cartographus-web",
  "version": "1.0.0",
  "description": "Frontend for Cartographus geographic visualization",
  "scripts": {
    "build": "npm run build:critical && npm run build:css && npm run build:app && npm run build:sw",
    "build:prod": "npm run build:critical && npm run build:css && npm run build:app:prod && npm run build:sw:prod",
    "build:critical": "npx esbuild src/styles/critical.css --bundle --outfile=public/critical.css --minify",
    "build:css": "npx esbuild src/styles/index.css --bundle --outfile=public/styles.css --minify --sourcemap",
    "build:app": "npx esbuild src/index.ts --bundle --outdir=dist --splitting --format=esm --minify --sourcemap --resolve-extensions=.ts,.js --chunk-names=chunks/[name]-[hash]",
    "build:app:prod": "npx esbuild src/index.ts --bundle --outdir=dist --splitting --format=esm --minify --sourcemap --resolve-extensions=.ts,.js --chunk-names=chunks/[name]-[hash] --define:process.env.NODE_ENV=\\\"production\\\" --pure:console.log --pure:console.debug --log-level=warning",
    "build:sw": "npx esbuild src/service-worker.ts --bundle --outfile=public/service-worker.js --minify --resolve-extensions=.ts,.js --format=iife",
    "build:sw:prod": "npx esbuild src/service-worker.ts --bundle --outfile=public/service-worker.js --minify --resolve-extensions=.ts,.js --format=iife --define:process.env.NODE_ENV=\\\"production\\\" --pure:console.log --pure:console.debug",
    "watch": "npm run watch:css & npm run watch:app & npm run watch:sw",
    "watch:css": "npx esbuild src/styles/index.css --bundle --outfile=public/styles.css --sourcemap --watch",
    "watch:app": "npx esbuild src/index.ts --bundle --outdir=dist --splitting --format=esm --sourcemap --watch --resolve-extensions=.ts,.js --chunk-names=chunks/[name]-[hash]",
    "watch:sw": "npx esbuild src/service-worker.ts --bundle --outfile=public/service-worker.js --sourcemap --watch --resolve-extensions=.ts,.js --format=iife",
    "dev": "npx esbuild src/index.ts --bundle --outdir=dist --splitting --format=esm --sourcemap --servedir=dist --serve=8081 --resolve-extensions=.ts,.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:chromium": "npx playwright test --project=chromium",
    "test:e2e:firefox": "npx playwright test --project=firefox",
    "test:e2e:webkit": "npx playwright test --project=webkit",
    "test:screenshots": "npx playwright test --config=playwright.screenshots.config.ts",
    "playwright:install": "npx playwright install"
  },
  "dependencies": {
    "@deck.gl/aggregation-layers": "^9.2.6",
    "@deck.gl/core": "^9.2.6",
    "@deck.gl/geo-layers": "^9.2.6",
    "@deck.gl/layers": "^9.2.6",
    "@deck.gl/mapbox": "^9.2.6",
    "@deck.gl/widgets": "^9.2.6",
    "echarts": "^6.0.0",
    "maplibre-gl": "^5.16.0",
    "pmtiles": "^4.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.6",
    "cors": "^2.8.5",
    "esbuild": "^0.27.2",
    "express": "^5.2.1",
    "typescript": "^5.9.3"
  },
  "main": "index.js",
  "keywords": [
    "tautulli",
    "plex",
    "visualization",
    "maps",
    "analytics",
    "webgl",
    "maplibre",
    "echarts",
    "deck.gl",
    "media-server"
  ],
  "author": "Cartographus Contributors",
  "license": "MIT"
}
